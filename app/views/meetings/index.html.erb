<div class="main__container">
  <div class="event__container">
    <h1>Events</h1>
    <% @meetings.each do |meeting| %>
      <div class="event__description <%= 'event-done' if meeting.is_done == true %>">
        <%= meeting.name %>
        <p>
          <%= meeting.start_time.strftime('%d-%m-%Y') %>
          <br>
          To
          <br>
          <%= meeting.end_time.strftime('%d-%m-%Y') %>
        </p>
      </div>
    <% end %>
  </div>

  <div class="calendar__container">
    <h1 class='mt-5 text-center mb-3'>Hello, <%= current_user.email %></h1>
    <%= month_calendar(events: @meetings) do |date, meetings| %>
      <span ><%= date.day %></span>

      <% if meetings.present?%>
        <span class="present-bullet">â€¢</span>
        <% meetings.each do |meeting| %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
