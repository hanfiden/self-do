<div class="text-center mx-auto w-50">
  <div class="mt-5">
    <%= simple_form_for @meeting do |f| %>
      <%= f.input :name, label: 'Event name' %>
      <%= f.input :start_time, label: 'Start time' %>
      <%= f.input :end_time, label: 'End time' %>
      <%= f.submit "Add Event", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
